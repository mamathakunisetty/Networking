# NSG Setup Commands

## Create a Network Security Group
az network nsg create \
  --resource-group MyResourceGroup \
  --name MyNSG

## Add an inbound rule
az network nsg rule create \
  --resource-group MyResourceGroup \
  --nsg-name MyNSG \
  --name AllowHTTP \
  --protocol Tcp \
  --direction Inbound \
  --priority 100 \
  --source-address-prefixes '*' \
  --source-port-ranges '*' \
  --destination-port-ranges 80 \
  --access Allow
